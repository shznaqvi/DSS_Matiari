<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:animateLayoutChanges="true"
    android:focusable="false"
    android:orientation="vertical">

    <!--    <com.google.android.material.card.MaterialCardView-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvItem"
        style="@style/cardView"
        android:layout_margin="2dp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:backgroundTint="@android:color/transparent"
        app:cardCornerRadius="@dimen/_4sdp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_grey_bordered">

            <ImageView
                android:id="@+id/fmRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="0dp">

                <ImageView
                    android:id="@+id/indicator"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_1"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/ic_home" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_7sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/ra09"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="Household Number"
                            android:textColor="@color/grayDark"
                            android:textSize="@dimen/_9ssp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/hh05"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingStart="12dp"
                            android:text=""
                            android:textColor="@color/gray"
                            android:textStyle="italic" />


                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_person_edit"
                            android:visibility="gone"
                            tools:visibility="visible" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!--                        <com.google.android.material.textview.MaterialTextView-->
                        <TextView
                            android:id="@+id/ra12"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:text="Name of Head"
                            android:textSize="@dimen/_6ssp" />

                        <!--                        <com.google.android.material.textview.MaterialTextView-->
                        <TextView
                            android:id="@+id/prvStatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_weight="1"
                            android:background="@color/redOverlay"
                            android:gravity="center_vertical|center_horizontal"
                            android:includeFontPadding="false"
                            android:letterSpacing="0.24"
                            android:paddingStart="12dp"
                            android:paddingTop="2dp"
                            android:paddingEnd="12dp"
                            android:paddingBottom="2dp"
                            android:text="Status"
                            android:textColor="@color/white"
                            android:textSize="11dp"
                            android:textStyle="italic|normal"
                            android:visibility="gone" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!--                        <com.google.android.material.textview.MaterialTextView-->
                        <TextView
                            android:id="@+id/mwraCount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:text="2 MWRA"
                            android:textColor="@color/colorSecondary"
                            android:textSize="@dimen/_6ssp" />

                        <!--                        <com.google.android.material.textview.MaterialTextView-->
                        <TextView
                            android:id="@+id/secStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:background="@color/grayLight"
                            android:letterSpacing="0.24"
                            android:paddingStart="12dp"
                            android:paddingTop="2dp"
                            android:paddingEnd="12dp"
                            android:paddingBottom="2dp"
                            android:text="Status"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_6ssp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>