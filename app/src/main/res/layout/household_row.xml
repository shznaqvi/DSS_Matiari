<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="2dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:animateLayoutChanges="true"
    android:focusable="false"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvItem"
        style="@style/cardView"
        android:layout_margin="2dp"
        android:background="?android:attr/selectableItemBackground"
        android:paddingBottom="0dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="2dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/colorAccent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="84dp">

            <ImageView
                android:id="@+id/fmRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="0dp">

                <ImageView
                    android:id="@+id/indicator"
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:elevation="2dp"
                    android:src="@drawable/ic_home" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/ra09"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Household Number"
                            android:textColor="@color/grayDark"
                            android:textSize="16sp"
                            android:includeFontPadding="false"
                            android:textStyle="bold" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/hh05"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingStart="12dp"
                            android:text=""
                            android:textColor="@color/gray"
                            android:textStyle="italic" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_members_done"
                            android:visibility="gone"
                            tools:visibility="visible"
                            android:tint="@color/green" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/ra14"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:text="Name of Head" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/prvStatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_weight="1"
                            android:background="@color/redOverlay"
                            android:gravity="center_vertical|center_horizontal"
                            android:includeFontPadding="false"
                            android:letterSpacing="0.24"
                            android:paddingStart="12dp"
                            android:paddingTop="2dp"
                            android:paddingEnd="12dp"
                            android:paddingBottom="2dp"
                            android:text="Status"
                            android:textColor="@color/white"
                            android:textSize="11dp"
                            android:textStyle="italic|normal"
                            android:visibility="gone" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/mwraCount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:text="2 MWRA" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/secStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:background="@color/grayLight"
                            android:gravity="center_vertical|center_horizontal"
                            android:letterSpacing="0.24"
                            android:paddingStart="12dp"
                            android:paddingTop="2dp"
                            android:paddingEnd="12dp"
                            android:paddingBottom="2dp"
                            android:text="Status"
                            android:textColor="@color/white"
                            android:textSize="11dp"
                            android:textStyle="italic|normal" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</FrameLayout>