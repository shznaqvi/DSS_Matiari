<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="pregnancy"
            type="edu.aku.hassannaqvi.dss_matiari.models.Pregnancy" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.dss_matiari.ui.sections.SectionDActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/app_bg_gray"
        android:orientation="vertical">


        <!-- CUSTOM TOOLBAR -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ToolbarTheme"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:subtitleTextAppearance="@style/Toolbar.SubtitleText"
            app:title="@string/pregnancy_mainheading"
            app:titleTextAppearance="@style/Toolbar.TitleText" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/GrpName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <!-- rc01  Input-Numeric   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVrb01"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottom"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/rc08" />

                            <TextView
                                style="@style/quesNum"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/Q_rc08" />


                        </LinearLayout>

                        <RadioGroup
                            android:id="@+id/rc08"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rb0801"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:checked='@{pregnancy.rc08.equals("1")}'
                                android:onClick='@{()->pregnancy.setRc08("1") + rc09.clearCheck() + rc11.clearCheck()}'
                                android:text="@string/rc0801" />

                            <RadioButton
                                android:id="@+id/rb0802"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:checked='@{pregnancy.rc08.equals("2")}'
                                android:onClick='@{()->pregnancy.setRc08("2")}'
                                android:text="@string/rc0802" />

                        </RadioGroup>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/fldGrprc10"
                    android:visibility="@{pregnancy.rc08.equals(`1`) ? View.GONE : View.VISIBLE}">

                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVrc10"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottom"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/rc10" />

                            <TextView
                                style="@style/quesNum"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/Q_rc10" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <io.blackbox_vision.datetimepickeredittext.view.DatePickerEditText
                                android:id="@+id/rc10"
                                style="@style/textInput"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="0dp"
                                android:layout_weight="1"
                                android:enabled="@{!pregnancy.rc10.equals(`98`)}"
                                android:gravity="center"
                                android:hint="YYYY-MM-DD"
                                android:text="@={pregnancy.rc10}"
                                app:dateFormat="yyyy-MM-dd"
                                app:maxDate="CR_DATE"
                                android:datePickerMode="spinner"
                                app:theme="@style/DatePickerEditTextDialogTheme" />

                            <CheckBox
                                android:id="@+id/rc10check"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:backgroundTint="@color/lightPink"
                                android:checked='@{pregnancy.rc10.equals("98")}'
                                android:onClick="@{()->pregnancy.setRc10(pregnancy.rc10.equals(`98`)?``:`98`)}"
                                android:tag="-1"
                                android:text="@string/dkn"
                                android:textColor="@color/redDark" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <!-- rc09  Radio   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVrc09"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottom"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/rc09" />

                            <TextView
                                style="@style/quesNum"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/Q_rc09" />


                        </LinearLayout>

                        <RadioGroup
                            android:id="@+id/rc09"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/rc0901"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked='@{pregnancy.rc09.equals("1")}'
                                android:onClick='@{()->pregnancy.setRc09("1")}'
                                android:text="@string/rc0901" />

                            <RadioButton
                                android:id="@+id/rc0902"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked='@{pregnancy.rc09.equals("2")}'
                                android:onClick='@{()->pregnancy.setRc09("2")}'
                                android:text="@string/rc0902" />

                            <RadioButton
                                android:id="@+id/rc0903"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked='@{pregnancy.rc09.equals("3")}'
                                android:onClick='@{()->pregnancy.setRc09("3")}'
                                android:text="@string/rc0903" />

                            <RadioButton
                                android:id="@+id/rc0904"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked='@{pregnancy.rc09.equals("4")}'
                                android:onClick='@{()->pregnancy.setRc09("4")}'
                                android:text="@string/rc0904" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- RC 11-->

                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVrc11"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottom"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/rc09" />

                            <TextView
                                style="@style/quesNum"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/Q_rc11" />


                        </LinearLayout>

                        <RadioGroup
                            android:id="@+id/rc11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/rc1101"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked='@{pregnancy.rc11.equals("1")}'
                                android:onClick='@{()->pregnancy.setRc11("1")}'
                                android:text="@string/rc1101" />

                            <RadioButton
                                android:id="@+id/rc1102"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked='@{pregnancy.rc09.equals("2")}'
                                android:onClick='@{()->pregnancy.setRc09("2")}'
                                android:text="@string/rc1102" />

                            <RadioButton
                                android:id="@+id/rc1103"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked='@{pregnancy.rc11.equals("3")}'
                                android:onClick='@{()->pregnancy.setRc11("3")}'
                                android:text="@string/rc1103" />
                        </RadioGroup>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                </LinearLayout>


                <!--EndButton LinearLayout-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="24dp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_End"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:background="@color/gray"
                        android:onClick="btnEnd"
                        android:text="Cancel"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btn_Continue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:background="@color/colorAccent"
                        android:onClick="btnContinue"
                        android:text="Save"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>