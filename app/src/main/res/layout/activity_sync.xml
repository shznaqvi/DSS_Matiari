        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:background="@drawable/bg_rounded_white"
            android:elevation="@dimen/_5sdp"
            android:padding="@dimen/_13sdp">

            <TextView
                android:id="@+id/activityTitle"
                style="@style/labelsHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@color/colorPrimaryLight"
                android:text="DATA SYNC"
                android:textColor="@color/colorPrimary" />

            <LinearLayout
                android:id="@+id/buttonsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activityTitle"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/btnSync"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:layout_weight="0.5"
                    android:background="@drawable/bg_rounded_white"
                    android:backgroundTint="@color/green"
                    android:elevation="@dimen/_2sdp"
                    android:onClick="ProcessStart"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_7sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_7sdp"
                    android:text="@string/btnSync"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_9ssp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnUpload"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_weight="0.5"
                    android:background="@drawable/bg_rounded_app_color_filled"
                    android:elevation="@dimen/_2sdp"
                    android:onClick="ProcessStart"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_7sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_7sdp"
                    android:text="@string/btnUpload"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_9ssp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnUploadPhotos"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="0.3"
                    android:background="@drawable/bg_rounded_app_color_dark_filled"
                    android:elevation="@dimen/_2sdp"
                    android:onClick="UploadPhotos"
                    android:padding="16dp"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_6sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:text="Upload Photos"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_9ssp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/mainDrawer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/buttonsLayout"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mTextViewS"
                    style="@style/labels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="0"
                    android:text="Upload Photo"
                    android:textColor="@color/redLight"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/errMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/redDark"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/pBar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/mTextViewS"
                    android:layout_centerInParent="true"
                    android:indeterminate="false"
                    android:progress="1"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/photoLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/btn_Continue"
                    android:layout_alignParentTop="true"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical"
                    android:padding="@dimen/_7sdp"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/dataLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/btn_Continue"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_upload_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        tools:itemCount="9"
                        tools:listitem="@layout/sync_list_adapter">

                    </androidx.recyclerview.widget.RecyclerView>

                    <TextView
                        android:id="@+id/no_data_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="No Activty"
                        android:textColor="@color/redLight"
                        android:textSize="@dimen/_10ssp"
                        android:visibility="gone" />

                </RelativeLayout>

                <Button
                    android:id="@+id/btn_Continue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_rounded_app_color_bordered"
                    android:onClick="btnContinue"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_6sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:text="@string/go_back"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_9ssp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </RelativeLayout>

